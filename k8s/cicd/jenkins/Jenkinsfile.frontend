            }
            steps {
                script {
                    def scannerHome = tool name: 'sonar-scanner'
                    dir('dev/alphacar/frontend') {
                        timeout(time: 30, unit: 'MINUTES') {
                            withEnv(["SONAR_SCANNER_OPTS=-Xmx2048m -Xms512m"]) {
                                withSonarQubeEnv('sonarqube') {
                                    sh """
