                    echo "ğŸ” ë³€ê²½ëœ íŒŒì¼ í™•ì¸ ì¤‘..."
                    
                    // [skip ci] ì»¤ë°‹ ì²´í¬
                    def commitMessage = sh(script: 'git log -1 --pretty=%B', returnStdout: true).trim()
                    echo "ì»¤ë°‹ ë©”ì‹œì§€: ${commitMessage}"
                    
                    if (commitMessage.contains('[skip ci]')) {
