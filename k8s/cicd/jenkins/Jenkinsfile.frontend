                                        sed -i 's/^sonar.host.url=/#sonar.host.url=/' sonar-project.properties || true
                                    fi

                                    echo "ğŸš€ SonarQube ë¹ ë¥¸ ìŠ¤ìº” ì‹œì‘..."
                                    
