                script {
                    // ì´ë¯¸ì§€ íƒœê·¸ìš© Git SHA ì¶”ì¶œ
                    env.GIT_SHA = sh(returnStdout: true, script: 'git rev-parse --short HEAD').trim()
                    
                    // ë²„ì „ ì •ë³´ ì„¤ì •
                    def baseVer = "1.0"
                    def versionPath = 'dev/alphacar/frontend/version.txt'
                    try {
