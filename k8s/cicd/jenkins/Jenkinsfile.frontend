                        sh "docker push ${imageFullTag}"
                        sh "docker logout ${ECR_REGISTRY}"
                        
                        echo "âœ… ECR í‘¸ì‹œ ì™„ë£Œ: ${imageFullTag}"
                    }
                }
            }
